<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:padding="16dp"
			  android:gravity="center_vertical"
			  android:id="@+id/LinearLayout_menu">

	<ImageView
			android:id="@+id/menu_item_image_view"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_marginRight="10dp"
			android:contentDescription="@android:string/ok" android:layout_marginLeft="10dp"/>

	<TextView
			android:id="@+id/menu_item_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:textColor="@android:color/white" android:layout_marginStart="17dp"/>

</LinearLayout>
