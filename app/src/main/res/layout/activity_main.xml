<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	tools:context=".MainActivity">


	<ProgressBar
			style="?android:attr/progressBarStyle"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:id="@+id/progressBar" android:layout_alignParentStart="true" android:layout_marginStart="537dp"
			android:layout_alignParentEnd="true" android:layout_marginEnd="548dp" android:layout_marginTop="315dp"
			android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
			android:layout_marginBottom="325dp" android:visibility="visible"/>
	<TextView
			android:text="Вы не авторизированы! Пожалуйста, привяжите устройство в личном кабинете"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textInfo" android:layout_alignParentStart="true"
			android:layout_marginStart="604dp" android:layout_alignParentEnd="true" android:layout_marginEnd="618dp"
			android:layout_marginBottom="139dp" android:layout_marginTop="175dp"
			android:layout_alignParentTop="true" android:layout_above="@+id/progressBar"/>
	<Button
			android:text="Просканировать код"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/btnScan" android:layout_alignParentStart="true"
			android:layout_marginStart="541dp"
			android:onClick="onScanCodeClick"
			android:layout_alignParentBottom="true" android:layout_marginBottom="147dp"
			android:layout_alignParentEnd="true" android:layout_marginEnd="553dp"/>
</RelativeLayout>
